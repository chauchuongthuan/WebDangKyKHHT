@using WebDangKyKHHT.Models;

@{
    ViewBag.Title = "Create";
    var Role = ViewBag.Role as AspNetRole;
    var Users = ViewBag.Users as SelectList;
    Layout = "~/Areas/Admin/Views/Shared/DKKHHTAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row">
            <section class="row">
                <div class="col-2 col-lg-4">
                    <h2>Add to @Role.Name</h2>
                </div>
                <br />
            </section>
            <div class="col-10 d-flex align-items-center">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <h5>
                    User &emsp;
                </h5>

                <div class="col-7 text-right">
                    <div class="input-group">
                        @Html.DropDownList("UserId", Users, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <br />
            &emsp;
            <div class="container">
                <div class="row">
                    <div class="col-8">
                        <button type="submit" value="Add" class="btn btn-dark">Add</button>
                    </div>
                    &emsp;
                    <div class="col-8">
                        <br />
                        <a href="@Url.Action("Index", "AspNetRolesAdmin")">Back to list</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

