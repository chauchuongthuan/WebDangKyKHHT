@model IEnumerable<WebDangKyKHHT.Models.MonHoc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/DKKHHTAdmin.cshtml";
}

<h2>DANH SÁCH MÔN HỌC</h2>

<div class="col-10 col-lg-7">
    <button type="submit" class="btn btn-light-info ">@Html.ActionLink("Tạo mới", "Create")</button>
</div>
<table class="table">
    <tr>
        <th>
            Mã môn học
        </th>
        <th>
            Tên môn học
        </th>
        <th>
            Số tín chỉ
        </th>
        <th>
            Học kì
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaMH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenMH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoTinChi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HocKi.ID)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.ID }) |            
            @Html.ActionLink("Xóa", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
