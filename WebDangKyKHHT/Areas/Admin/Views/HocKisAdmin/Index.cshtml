@model IEnumerable<WebDangKyKHHT.Models.HocKi>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/DKKHHTAdmin.cshtml";
}


<section class="row">
    <div class="col-2 col-lg-5">
        <h2>Học Kì</h2>
    </div>
    <br />
    <div class="col-10 col-lg-7">
        <button type="submit" class="btn btn-light-info ">@Html.ActionLink("Tạo mới", "Create")</button>
    </div>
    
</section>
<div class="container">
    <table class="table">
        <tr>
            <th>
                Tên Học Kì
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenHK)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
</div>