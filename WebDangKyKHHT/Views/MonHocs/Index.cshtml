<!-- Title body -->
<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-12">
                        <div class="section-title">
                            <h2>BẢNG ĐĂNG KÝ KẾ HOẠCH HỌC TẬP</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div class="container">
            <div class="d-flex align-items-center">

                @using (Html.BeginForm())
                {
                    <table>
                        <tr>
                            <th>
                                Chọn Học Kì
                            </th>
                            <th>
                                @Html.DropDownList("ID_HK", null, htmlAttributes: new { @class = "form-control" })
                            </th>
                            <th>
                                &ensp;
                                <button class="btn btn-secondary" type="submit" value="Tìm kiếm" /><span>Tìm kiếm</span>
                            </th>
                        </tr>
                    </table>
                }
            </div>
        </div>




        <div class="content">
            <div class="container">
                <table class="table table-striped custom-table">
                    <thead>
                        <tr>
                            <th scope="col">Số thứ tự</th>
                            <th scope="col">Tên môn</th>
                            <th scope="col">Mã môn</th>
                            <th scope="col">Học kỳ</th>
                            <th scope="col">Số tín chỉ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            {
                                total += (int)item.SoTinChi;
                                <tr scope="row">
                                    <td>@item.ID</td>
                                    <td><p>@item.TenMH</p></td>
                                    <td>
                                        @item.MaMH
                                    </td>
                                    <td>@item.HocKi.TenHK</td>
                                    <td>@item.SoTinChi</td>
                                </tr>
                            }
                        }
                    </tbody>

                </table>
            </div>
        </div>
        <table class="table table-striped table-borderless">
            <thead align="center">
                <tr>
                    <th scope="col">Tổng số tín chỉ</th>
                </tr>
            </thead>
            <tbody align="center">
                <tr>
                    <td>
                        @total
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>



