<div class="header-top">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-12 col-lg-6 d-flex">
                <a href="@Url.Content("~/Home/Index")" class="site-logo">
                    <img src="@Url.Content("~/images/logo-xanh.png")" />
                </a>

                <a href="#" class="ml-auto d-inline-block d-lg-none site-menu-toggle js-menu-toggle text-black">
                    <span class="icon-menu h3"></span>
                </a>

            </div>
            <div class="col-12 col-lg-6 ml-auto d-flex">
                <div class="ml-md-auto top-social d-none d-lg-inline-block">

                </div>
                <div class="header__top__right__auth">
                    @if (Request.IsAuthenticated)
                    {
                        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="d-flex">
                                <ul class="nav navbar-nav navbar-right">
                                    <li>
                                        <img class="rounded-circle" height="60" src="~/images/person_profile.jpg" data-holder-rendered="true" />
                                    </li>
                                </ul>
                            </div>
                        }
                    }
                    else
                    {
                        <form action="@Url.Content("~/Account/Login")" class="search-form d-inline-block">

                            <div class="d-flex">
                                &ensp;
                                &ensp;
                                <button type="submit" class="btn btn-secondary"><span>Login</span></button>
                            </div>
                        </form>
                    }

                </div>

            </div>
        </div>
        <div class="col-6 d-block d-lg-none text-right">
        </div>
    </div>
</div>
