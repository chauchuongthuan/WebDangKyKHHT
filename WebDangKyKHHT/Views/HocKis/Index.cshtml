@model IEnumerable<WebDangKyKHHT.Models.HocKi>

@{
    ViewBag.Title = "Index";
}

<div class="site-section">
    <div class="container">
        <h1 align="center">Quản lý học kỳ</h1>

    </div>
</div>
<div class="container">
    <div class="col-4 text-right">
        <div class="input-group">
            <button type="submit" class="btn btn-secondary">@Html.ActionLink("Thêm học kỳ", "Create")</button>
        </div>
    </div>
    <br />
    <div class="col-12">
        <table class="table custom-table">
            <tr>
                <th scope="col">
                    Tên học kỳ
                </th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenHK)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.ID })
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

