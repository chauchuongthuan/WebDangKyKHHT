@using WebDangKyKHHT.Models;

@{ ViewBag.Title = "Create";
    var Role = ViewBag.Role as AspNetRole;
    var Users = ViewBag.Users as SelectList; }


<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-12">
                        <div class="section-title">
                            <h1>THÊM USER VÀO ROLE</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="row">
                        <div class="col-12">
                            <div class="section-title">
                                <h2>Add User to @Role.Name </h2>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-10 d-flex align-items-center">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <h5>
                        @Html.Label("User", new { @class = "control-label col-md-2" })
                    </h5>

                    <div class="col-7 text-right">
                        <div class="input-group">
                            @Html.DropDownList("UserId", Users, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <br />
                &emsp;
                <div class="container">
                    <div class="row">
                        <div class="col-8">
                            <button type="submit" value="Add" class="btn btn-secondary">Add</button>
                        </div>
                        &emsp;
                        <div class="col-8">
                            <a href="@Url.Action("Index", "AspNetRoles")">Back to list</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>

