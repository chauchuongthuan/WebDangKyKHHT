@model IEnumerable<WebDangKyKHHT.Models.AspNetUser>

@{
    ViewBag.Title = "Info";
    Layout = "~/Views/Shared/DKKHHT.cshtml";
}
<style>
    .form-row .form-col {
        width: 30%;
        margin-right: 10px;
    }
</style>
<div class="site-section">
    <div class="container">
        <h1 align="center">Thông tin sinh viên</h1>

    </div>
</div>





@foreach (var item in Model)
{
    if (item.UserName == User.Identity.Name)
    {
        <div class="container">
            <section id="wizard-p-0" role="tabpanel" aria-labelledby="wizard-h-0" class="body current" aria-hidden="false" style="">
                <h3>Thông tin Sinh Viên</h3>
                <br />
                <div class="form-row">
                    <div class="form-col">
                        <label for="">
                            Email Trường <i class="zmdi zmdi-account-o"></i>
                        </label>
                        <div class="form-holder-3">
                            @Html.DisplayFor(modelItem => item.Email)
                        </div>
                    </div>
                    <div class="form-col">
                        <label for="">
                            Mật Khẩu <i class="zmdi zmdi-edit"></i>
                        </label>
                        <div class="form-holder">

                            <input disabled type="text" class="form-control" placeholder="***********">
                        </div>
                    </div>
                    <div class="form-col">
                        <label for="">
                            Mã Sinh Viên <i class="zmdi zmdi-edit"></i>
                        </label>
                        <div class="form-holder">
                            @Html.DisplayFor(modelItem => item.SecurityStamp)
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-col">
                        <label for="">
                            Tên Sinh Viên <i class="zmdi zmdi-email"></i>
                        </label>
                        <div class="form-holder">
                            @Html.DisplayFor(modelItem => item.Ten)
                        </div>
                    </div>
                    <div class="form-col">
                        <label for="">
                            UserName <i class="zmdi zmdi-email"></i>
                        </label>
                        <div class="form-holder">
                            @Html.DisplayFor(modelItem => item.UserName)
                        </div>
                    </div>
                    <div class="form-col">
                        <label for="">
                            Email đã xác nhận <i class="zmdi zmdi-smartphone-android"></i>
                        </label>
                        <div class="form-holder" ht>
                            @Html.DisplayFor(modelItem => item.EmailConfirmed)
                        </div>
                    </div>

                </div>
                <div class="form-row">
                    <div class="form-col">
                        <label for="">
                            Ngày Sinh <i class="zmdi zmdi-calendar"></i>
                        </label>
                        <div class="form-holder">
                            @Html.DisplayFor(modelItem => item.NgaySinh)
                        </div>
                        <br />

                    </div>
                    <div class="form-col">
                        <label for="">
                            Số Điện Thoại <i class="zmdi zmdi-smartphone-android"></i>
                        </label>
                        <div class="form-holder">
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </div>
                    </div>
                    <div class="form-col">
                        <label for="">
                            Số điên Thoại đã xác nhận <i class="zmdi zmdi-smartphone-android"></i>
                        </label>
                        <div class="form-holder">
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </div>
                    </div>

                </div>
                @*<div class="form-row">
                        <div class="form-col">
                            <label for="">
                                Mã Số Sinh Viên <i class="zmdi zmdi-calendar"></i>
                            </label>
                            <div class="form-holder">
                                @Html.DisplayFor(model => item.MSSV)
                            </div>

                        </div>
                        <div class="form-col">
                            <label for="">
                                Địa Chỉ <i class="zmdi zmdi-smartphone-android"></i>
                            </label>
                            <div class="form-holder">
                                @Html.DisplayFor(model => model.DiaChi)
                            </div>
                        </div>

                    </div>*@
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">

                        @if (User.IsInRole("Admin"))
                        {
                            @Html.ActionLink("Quay lại", "Index")
                        }
                        <br />
                        <br />|
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </div>
                </div>
            </section>
              
        </div>
        
          
       
    }
}

          
<script src="~/js/jsphu/jquery-3.3.1.min.js"></script>

